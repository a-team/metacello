      .author= 'Martin Schenck'
    .info
      .infoline= 'Dependencies :'
      .dependence= 'Seaside 3.0'
      .dependence= 'SqueakSave'
    .info
      .infoline= 'Repositories :'
      .repository= markdown('http://www.hpi.uni-potsdam.de/hirschfeld/squeaksource/')
    
  .description= markdown(h(project.description))
  
  .code= h(project.doIt)
  
  .screenshots
    .infoline= 'Screenshots :'
    .pic
      %img{:src => 'https://www.hpi.uni-potsdam.de/hirschfeld/trac/SqueakCommunityProjects/raw-attachment/wiki/deli/deli-home.png'}
