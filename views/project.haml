- if project
  .projectlogobox
    .projectlogo
      - if project.screenshot
        %img{:src => h(project.screenshot), :alt => "Project screenshot"}
      - else
        %img{:src => "/public/missing-image.png", :alt => "Project screenshot is missing"}

  .projectlink
    read more
    
  .projectname
    = h(project.name)
    .projecttitle= '- Submitting System'
    
  .infobox
    .info
      .infoline= 'Last update :'
      .date= '12.12.2012' 
      //h(project.updated_on.to_s)
    .info
      .infoline= 'License :'
      .license= h(project.license)
    .info
      .infoline= 'Team :'
      //dummy
      //Team:
      //- project.team[0...3].each_with_index do |u, idx|
      //  %a{:href => "/dashboard/#{u}"}= u
